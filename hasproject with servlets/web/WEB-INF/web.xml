<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <listener-class>submit.signin</listener-class>
    </listener>
    <listener>
        <listener-class>submit.signup</listener-class>
    </listener>
    <servlet>
        <servlet-name>signin</servlet-name>
        <servlet-class>submit.signin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>submit.signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>membercontroller</servlet-name>
        <servlet-class>submit.membercontroller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signin</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>membercontroller</servlet-name>
        <url-pattern>/membercontroller</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <jsp-config>
        <jsp-property-group>
            <display-name>signin</display-name>
            <url-pattern>/signin.jsp</url-pattern>
        </jsp-property-group>
        <jsp-property-group>
            <display-name>signup</display-name>
            <url-pattern>/signup.jsp</url-pattern>
        </jsp-property-group>
    </jsp-config>
</web-app>
